<div class="new-course-header sub-header"><h1>Create a Course</h1></div>

<form class="new-course" action="<%= courses_url %>" method="Post">
  <%= auth_token %>

  <label for="course_title">Title:</label>
  <input type="text"
         name="course[title]"
         value="<%= @course.title %>">

  <label for="course_category">Category:</label>
  <input type="text"
         name="course[category]"
         value="<%= @course.category %>">

  <input type="submit" value="Make Course">
</form>